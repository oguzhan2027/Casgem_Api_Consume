@model List<Casgem_Api_Consume.Dtos.CustomerDtos.ResultCustomerDto>
@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Müşteri listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Müşteri adı</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CustomerID</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td><a href="/Category/DeleteCustomer/ @item.CustomerID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Category/UpdateCustomer/ @item.CustomerID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Customer/AddCustomer" class="btn btn-outline-primary">Yeni müşteri</a>

